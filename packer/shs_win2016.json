{
  "variables": {
          "gcloud_project_id": "sab-dev-sand-shs-temp-9341"
    },
    "builders": [
      {
        "type": "googlecompute",
        "project_id": "{{user `gcloud_project_id`}}",
        "disk_size": "50",
        "source_image": "sabre-winops-win2016-20200805",
        "source_image_project_id": "sab-ssvcs-gold-images-c3d9",        
        "source_image_family": "sabre-winops-win2016-images",
        "zone": "us-central1-a",
        "machine_type":"n1-standard-1",
        "network": "vpc-dev",
        "subnetwork": "sn-dev-uscentral1-01",
        "network_project_id": "sab-ssvcs-network-vpcs-5041", 
        "tags": [
          "default-uscentral1", "rdp", "ssh", "https","winrm"
        ],
        "image_name": "shs-win2016--{{isotime | clean_resource_name}}",
        "image_family": "shs-win2016",
        "communicator": "winrm",
        "winrm_username": "packer_user",
        "winrm_port": 5986,
        "winrm_insecure": true,
        "winrm_timeout": "10m",
        "winrm_use_ssl": true,
        "winrm_no_proxy": true,
        "metadata": {
          "windows-startup-script-cmd": "winrm quickconfig -quiet & net user /add packer_user & net localgroup administrators packer_user /add & winrm set winrm/config/service/auth @{Basic=\"true\"}"
        },
        "omit_external_ip": "true",
        "use_internal_ip": "true",
        "on_host_maintenance":"TERMINATE"
      }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "inline": [
              "dir c:\\"
            ]
        }
    ]
  }