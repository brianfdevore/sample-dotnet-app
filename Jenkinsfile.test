pipeline {
    agent none
    environment {
        LOG_ENV = 'dev'
    }
    stages {
        stage ('App-Build') {
            agent {
                label 'master'
                }
            steps {                
                echo 'Building application package...'
                //bat 'dotnet clean'
                //bat 'dotnet build'
            }
        }
        stage ('App-Test') {
            agent {
                label 'master'
                }
            steps {
                echo "Running app testing from Linux Master in ${LOG_ENV}"
            }
        }
        stage ('App-Deploy') {
            agent {
                label 'master'
                }
            steps {
                echo "Running app deploy from Linux Agent in ${LOG_ENV}"
                sh 'cd tf/dev'
                sh 'terraform init'
                sh 'terraform apply -auto-approve'
            }
        }
    }
}
