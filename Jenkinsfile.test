pipeline {
    agent none
    environment {
        LOG_ENV = 'dev'
    }
    stages {
        stage ('App-Build') {
            agent {
                label 'windows'
                }
            steps {
                echo "Checking out SCM on Windows Agent in ${LOG_ENV}"
                checkout scm
                echo 'Building application package...'
                bat 'dotnet clean'
                bat 'dotnet build'
            }
        }
        stage ('App-Test') {
            agent {
                label 'master'
                }
            steps {
                echo "Running app testing from Linux Master in ${LOG_ENV}"
            }
        }
        stage ('App-Deploy') {
            agent {
                label 'windows'
                }
            steps {
                echo "Running app deploy from Windows Agent in ${LOG_ENV}"
        }
    }
}
